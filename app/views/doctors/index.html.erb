<div class="p-20">
  <center>
    <h1 class="mb-10 text-5xl font-bold text-blue-700">DOCTORS</h1>
    <table class="table table-success table-striped-columns p-10">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>DEGREE</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @doctors.each do |doctor| %>
          <tr>
            <td><%= doctor.first_name %></td>
            <td><%= doctor.last_name %></td>
            <td><%= doctor.contact %></td>
            <td><%= doctor.email %></td>
            <td><%= doctor.degree %></td>
            <td><%=link_to 'Show', doctor, class: "btn btn-primary"%></td>
            <td><%= link_to 'Update', edit_doctor_path(doctor), class: "btn btn-secondary" %></td>
            <td><%=link_to 'Delete', doctor, method: :delete, class: "btn btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'Add a doctor', new_doctor_path, class: "bg-blue-700 p-2 mt-10 text-white font-bold rounded-md hover:bg-blue-500" %>
  </center>
</div>